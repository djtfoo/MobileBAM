<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mainmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/menu"
    tools:context="com.sidm.mgpweek5.Mainmenu">

    <Button
        android:id="@+id/btn_options"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="101dp"
        android:background="@drawable/button_options"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp" />

    <Button
        android:id="@+id/btn_help"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginRight="101dp"
        android:background="@drawable/button_transparent"
        android:text="-HELP-"
        android:textSize="18dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#02004F"
        android:layout_below="@+id/btn_start"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/maintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAM!"
        android:textSize="60dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#02004F"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/btn_start" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginRight="101dp"
        android:background="@drawable/button_transparent"
        android:text="-PLAY-"
        android:textSize="18dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#02004F"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btn_help" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIG APOCALYPTIC MONSTERS"
        android:textSize="10dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#02004F"
        android:layout_alignBottom="@+id/maintitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_facebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_facebook"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_options" />

</RelativeLayout>
